+def DownloadPGOTrainingFile():
+  curdir = os.getcwd()
+  os.chdir(THIRD_PARTY_DIR)
+  training_source = 'pgo_training-1.ii'
+  with open(training_source, 'w') as f:
+    DownloadUrl(CDS_URL + '/' + training_source, f)
+  os.chdir(curdir)
